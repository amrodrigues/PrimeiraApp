@model IEnumerable<Aluno>

<table classe="table">

	<thead>
		<tr>
			<th>Nome</th>
			<th>Data de Nascimento</th>
			<th>Email</th>
			<th>Avaliação</th>
			<th>Ativo</th>
			<th>Ações</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var aluno in Model)
		{
			<tr>
				<td>@aluno.Nome</td>
				<td>@aluno.DataNascimento.ToShortDateString()</td>
				<td>@aluno.Email</td>
				<td>@aluno.Avaliacao</td>
				<td>@aluno.Ativo</td>
				<td>
			     	<a asp-action="Edit" asp-route-id="@aluno.Id">Editar</a> |
					<a asp-action="Delete" asp-route-id="@aluno.Id">Excluir</a>
				</td>
			</tr>
		}
	</tbody>
</table>
